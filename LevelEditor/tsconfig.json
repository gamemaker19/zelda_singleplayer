{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["es5", "dom", "es2015.core","es2016","es2017.object"],
    "target": "es5",
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "code/**/*",
    "node_modules/vue/types/index.d.ts",
    "node_modules/@types/jquery/index.d.ts",
    "node_modules/@types/lodash/index.d.ts",
    "node_modules/@types/howler/index.d.ts"
  ]
}